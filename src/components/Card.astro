---
interface Props {
	title: string;
	body: string;
	href: string;
	date: string;
	author: string;
}

const { href, title, body, date, author } = Astro.props;
---

<li class="blog-card">
	<a href={href}>
		<div class="card-content">
			<h2 class="card-title">{title}</h2>
			<p class="card-meta">{date} {author}</p>
			<p class="card-body">{body}</p>
		</div>
	</a>
</li>

<style>
	.blog-card {
		list-style: none;
		display: flex;
		padding: 3px;
		border-radius: 8px;
		background: #1c1f24;
		transition: transform 0.3s ease, box-shadow 0.3s ease;
		box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
	}
	.blog-card:hover {
		transform: translateY(-5px);
	}

	.blog-card > a {
		width: 100%;
		padding: 1.5rem;
		text-decoration: none;
		color: #ffffff;
		display: flex;
		flex-direction: column;
		background-image: linear-gradient(145deg, #2a2f36, #1c1f24);
		border-radius: 12px;
		transition: background-image 0.3s ease;
	}


	.card-title {
		font-size: 1.5rem;
		margin: 0;
		color: #ffffff;
		transition: color 0.3s ease;
	}


	.card-meta {
		font-size: 0.875rem;
		color: #a0a0a0;
		margin-top: 0.5rem;
	}

	.card-body {
		font-size: 1rem;
		margin-top: 0.75rem;
		line-height: 1.6;
		color: #d0d0d0;
	}
</style>
